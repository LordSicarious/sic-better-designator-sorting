<!--========== INHERITANCE TRACING ==========-->
<!-- Adds extra tags to various buildings in order to allow tracing of derived buildings -->
<Patch>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>/Defs/ThingDef [@Name="BenchBase"]</xpath>
    <value>
      <li Class="BetterDesignatorSorting.BDS_DefModExtension">
        <buildingBase>workbench</buildingBase>
      </li>
    </value>
  </Operation>
